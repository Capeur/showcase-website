// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               Int      @id @default(autoincrement())
  email            String   @unique
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  blogAdmin        Boolean  @default(false)
  userAdmin        Boolean  @default(false)
  blogAuthor       Boolean  @default(false)
  formAdmin        Boolean  @default(false)
  createdBlogs     Blog[]   @relation("CreatedBlogs")
  contributedBlogs Blog[]   @relation("ContributedBlogs")
}

model ContactForm {
  id      Int      @id @default(autoincrement())
  name    String
  email   String
  tel     BigInt?
  societe String?
  subject String?
  message String
  date    DateTime
  done    Boolean  @default(false)
}

model Blog {
  id           Int          @id @unique @default(autoincrement())
  localeBlogs  LocaleBlog[]
  author       User         @relation("CreatedBlogs", fields: [authorId], references: [id])
  contributors User[]       @relation("ContributedBlogs")
  authorId     Int
}

model LocaleBlog {
  id      Int               @id @unique @default(autoincrement())
  title   String            @unique
  locale  String
  content FlexibleContent[]
  Blog    Blog              @relation(fields: [blogId], references: [id])
  blogId  Int
}

model FlexibleContent {
  id           Int         @id @unique @default(autoincrement())
  type         String
  content      String
  LocaleBlog   LocaleBlog? @relation(fields: [localeBlogId], references: [id])
  localeBlogId Int?
}
