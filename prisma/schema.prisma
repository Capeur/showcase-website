// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         Int     @id @default(autoincrement())
  email      String  @unique
  image      String?
  blogAdmin  Boolean @default(false)
  userAdmin  Boolean @default(false)
  blogAuthor Boolean @default(false)
  formAdmin  Boolean @default(false)
  PostIds    Post[]
}

model ContactForm {
  id      Int      @id @default(autoincrement())
  name    String
  email   String
  tel     BigInt?
  societe String?
  subject String?
  message String
  date    DateTime
  done    Boolean  @default(false)
}

model Post {
  id          Int          @id @unique @default(autoincrement())
  localePosts LocalePost[]
  authors     User[]
  validated   Boolean      @default(false)
  labels      Label[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Label {
  id           Int           @id @unique @default(autoincrement())
  localeLabels LocaleLabel[]
  Post         Post?         @relation(fields: [blogId], references: [id])
  blogId       Int?
}

model LocaleLabel {
  id      Int    @id @unique @default(autoincrement())
  name    String @unique
  locale  String
  Label   Label? @relation(fields: [labelId], references: [id])
  labelId Int?
}

model LocalePost {
  id      Int    @id @unique @default(autoincrement())
  title   String @unique
  locale  String
  Post    Post   @relation(fields: [blogId], references: [id])
  blogId  Int
  content String
}
